<div id="root-content" class="first">
  <%= render 'loading' %>
  <%= render 'menu' %>
  <div id="tooltip"></div>
  <%= render 'footer' %>
  <div id="members-content" class="main-content current z1">
    <div class="cTable z1">
      <%= render 'member_table_head' %>
      <%= render 'member_table_cell' %>
    </div>
    <svg @click="addMember" id='new-member-icon' class="func-btn z2" @mouseenter="showTooltip('點擊此圖示以新增成員')" @mouseleave="hideTooltip">
      <use xlink:href="/assets/icon/icons.svg#new-member"></use>
    </svg>
    <%= render 'new_member_form' %>
    <%= render 'edit_member_input' %>
    <%= render 'edit_member_textarea' %>
  </div>
  <div id="files-content" class="main-content">
    <%= form_tag '/dl', authenticity_token: true, id: 'download-form' do %>
      <%= hidden_field_tag 'file_id' %>
      <%= hidden_field_tag 'download_mode'%>
    <% end %>
    <%= render 'edit_file_title' %>
    <div id="tag-zone">
      <%= render 'tag_filters' %>
    </div>
    <div id="file-explorer" tabindex="1" @keydown.f2="editFileTitle" @keydown.delete="removeFile" @keydown.enter="downloadFile">
      <div id="select-zone"></div>
      <%= render 'explorer_menu' %>
      <%= render 'doc_list' %>
    </div>
    <div id="doc-page-left" class="change-page" @mouseenter="showTooltip('檔案列表 上一頁')" @mouseleave="hideTooltip" @click="prevPage">＜</div>
    <div id="doc-page-right" class="change-page" @mouseenter="showTooltip('檔案列表 下一頁')" @mouseleave="hideTooltip" @click="nextPage">＞</div>
    <svg id="tag-console-btn" class="z1 func-btn" @click="openTagConsole" @mouseenter="showTooltip('開啓標籤控制台')" @mouseleave="hideTooltip">
      <use xlink:href="/assets/icon/icons.svg#tag-icon" ></use>
    </svg>
    <%= render 'tag_console' %>
    <%= render 'doc_tag_editor' %>
    <svg id="new-file-icon" class="z1 func-btn" @click="openFileScreen" @mouseenter="showTooltip('開啓上傳控制器')" @mouseleave="hideTooltip">
      <use xlink:href="/assets/icon/icons.svg#new-file" ></use>
    </svg>
    <%= render 'upload_zone' %>
    <input id="ffield" type="file" multiple style="display: none">
  </div>
  <div id="tube-content" class="main-content">
    <svg id='new-tube-icon' class='func-btn' @mouseenter='showTooltip("新增YouTube連結")' @mouseleave='hideTooltip' @click='openTubeForm'>
      <use xlink:href="/assets/icon/icons.svg#add-youtube"></use>
    </svg>
    <%= render 'new_tube_form' %>
    <%= render 'tv_list' %>
    <%= render 'edit_tube' %>
  </div>
  <%= render 'sys_msg' %>
  <%= render 'logger_content' %>
  <%= render 'change_password' %>
  <%= render 'youtube_player' %>
</div>
