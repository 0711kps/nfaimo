<div tabindex="1" id="change-password-form" class="popup underground z3">
    <label id="new-password-title" class="popup-title" for="password">修改密碼</label>
    <svg id='close-pw-btn' class="kill-btn popup-kill" viewBox="0 0 80 80" @click="closeMemberForm">
      <line x1="20" y1="20" x2="60" y2="60"></line>
      <line x1="60" y1="20" x2="20" y2="60"></line>
    </svg>
    <input type="password" id="password" required placeholder="新密碼">
    <input type="password" id="re-password" required placeholder="確認新密碼">
</div>
